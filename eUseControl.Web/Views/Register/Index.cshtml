
@{
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

@using System.Web.Optimization

@model eUseControl.Web.Models.userRegister

<div class="page-content">
    <div class="form-v4-content">
        <div class="form-left">
            <h2>INFOMATION</h2>
            <p class="text-1">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Et molestie ac feugiat sed. Diam volutpat commodo.</p>
            <p class="text-2"><span>Eu ultrices:</span> Vitae auctor eu augue ut. Malesuada nunc vel risus commodo viverra. Praesent elementum facilisis leo vel.</p>
            <div class="form-left-last">
                <!--<input type="submit" name="account" class="account" value="Have An Account">-->
                @using (Html.BeginForm("Index", "Login", FormMethod.Get, new { @id = "LoginForm" }))
                {
                    <button class="login-action" type="submit">Have an Account</button>
                }
            </div>
        </div>
        @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @id = "LoginForm", autocomplete = "off", @class="form-detail" }))
        {
            <h2>REGISTER FORM</h2>
            <div class="form-group">
                <div class="form-row form-row-1">
                    @Html.LabelFor(m => m.FirstName, new { @for = "first_name" })
                    @Html.TextBoxFor(m => m.FirstName, new
                                {
                                    placeholder = "",
                                    title = "Introduceti prenumele",
                                    name = "first_name",
                                    id = "first_name",
                                    @class = "input-text",
                                    type = "text"
                                })
                </div>
                <div class="form-row form-row-1">
                    @Html.LabelFor(m => m.LastName, new { @for = "last_name" })
                    @Html.TextBoxFor(m => m.LastName, new
                    {
                         placeholder = "",
                         title = "Introduceti prenumele",
                         name = "first_name",
                         id = "last_name",
                         @class = "input-text",
                         type = "text"
                    })
                </div>
            </div>
            <div class="form-row">
                @Html.LabelFor(m => m.Username, new { @for = "your_username" })
                @Html.TextBoxFor(m => m.Username, new
                {
                    placeholder = "",
                    title = "Introduceti numele de utilizator",
                    name = "your_username",
                    id = "your_username",
                    @class = "input-text",
                    type = "text",
                    required = "true"
                })
            </div>
            <div class="form-row">
                <!--<label for="your_email">Your Email</label>
            <input type="text" name="your_email" id="your_email" class="input-text" required pattern="[^]+[^]+.[a-zA-Z]{2,6}">-->
                @Html.LabelFor(m => m.Email, new { @for = "your_email" })
                @Html.TextBoxFor(m => m.Email, new
                {
                      placeholder = "",
                      title = "Introduceti email-ul",
                      name = "your_email",
                      id = "your_email",
                      @class = "input-text",
                      type = "text",
                      required = "true"
                })
            </div>
            <div class="form-group">
                <div class="form-row form-row-1 ">
                    @Html.LabelFor(m => m.Password, new { @for = "password" })
                    @Html.TextBoxFor(m => m.Password, new
                                {
                                    placeholder = "",
                                    title = "Introduceti parola",
                                    name = "password",
                                    id = "password",
                                    @class = "input-text",
                                    type = "password",
                                    required = "true"
                                })
                </div>
                <div class="form-row form-row-1">
                    @Html.LabelFor(m => m.Confirm, new { @for = "password" })
                    @Html.TextBoxFor(m => m.Confirm, new
                                {
                                    placeholder = "",
                                    title = "Reintroduceti parola",
                                    name = "confirm_password",
                                    id = "confirm_password",
                                    @class = "input-text",
                                    type = "password",
                                    required = "true"
                                })
                </div>
            </div>
            <div class="form-checkbox">
                <label class="container">
                    <p>I agree to the <a href="#" class="text">Terms and Conditions</a></p>
                   @Html.CheckBoxFor(m => m.Terms, new
                   {
                       type = "checkbox",
                       name = "checkbox",
                       value = "true",
                       required = "true"
                   })
                    <span class="checkmark"></span>

                </label>
            </div>
            <div class="form-row-last">
                <button class="post-action" type="submit">Inregistreaza-te</button>
            </div>
        }
    </div>
</div>
