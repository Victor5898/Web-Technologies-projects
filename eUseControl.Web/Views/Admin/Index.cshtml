
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Index";
} 

@model eUseControl.Web.Models.userData

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">PRODUCT ID</th>
                                <th scope="col">PRODUCT NAME</th>
                                <th scope="col">ADD DATE</th>
                                <th scope="col">DURATION</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var course = Model.CourseObj;
                                if (course != null)
                                {
                                    foreach (var co in course)
                                    {
                                        <tr>
                                            <th scope="row"><input type="checkbox" /></th>
                                            <td class="tm-product-name">@co.Id</td>
                                            <td>@co.ProdName</td>
                                            <td>@co.DaysAfter</td>
                                            <td>@co.Duration</td>
                                            <td>
                                                <a href="#" class="tm-product-delete-link">
                                                    <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>Nu a fost gasit nici un curs! </td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Get))
                {
                    <button type="submit" name="add"
                            class="btn btn-primary btn-block text-uppercase mb-3">
                        Adauga un curs nou
                    </button>
                }
                    <button type="submit" name=" delete" class="btn btn-primary btn-block text-uppercase">
                        Sterge cursurile selectate
                    </button>
                
